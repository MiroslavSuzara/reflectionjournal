<h1>These are your Daily Reflections</h1>

<% @reflections.each do |r| %>
  <div class="bs-example">
      <div class="panel-group" id="accordion">
          <div class="panel panel-default">
              <div class="panel-heading">
                  <h4 class="panel-title">
                      <a data-toggle="collapse" data-parent="#accordion" href="#<%= r.id %>"><%=formatted_date(r.created_at)%></a>
                  </h4>
              </div>
              <div id="<%= r.id %>" class="panel-collapse collapse">
                  <div class="panel-body">
                    <p>What did you learn today? <%= r.answer1 %></p>
                    <p>What did you do well today? <%= r.answer2 %></p>
                    <p>What could you have done better today? <%= r.answer3 %></p>
                  </div>
              <div class="btn-group">
                <%= link_to "Edit", edit_reflection_path(r), class: "btn btn-default" %> 
                <%= link_to "Delete", reflection_path(r), method: :delete, data:{confirm: "Are you sure you want to delete this reflection?"}, class: "btn btn-default" %> 
              </div>
            </div>
          </div>
      </div>
  </div>
<% end %>