<!DOCTYPE html>
<html>
<head>
  <title>Reflection Journal</title> 
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

<!-- Latest compiled and minified JavaScript -->

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
<script src="app/assets/javascripts/zabuto_calendar.min.js"></script>
<link rel="stylesheet" type="text/css" href="app/assets/javascripts/zabuto_calendar.min.css">

</head>
<body>

<div class="container">
  <a href="/">Home</a>
  |
  <a href="/about">About</a>
  |
  <a href="/calendar">Calendar</a>
  |
  <%= link_to "Reflections", reflections_path %>
  |
  <%= link_to "Daily Reflection", new_reflection_path %>
    <div class="pull-right">
      <% if user_signed_in? %> 
        <%= "Hello" + " " + current_user.full_name %> 
        <%= link_to "sign out", destroy_user_session_path, method: :delete, class: "btn btn-default" %>
      <% else %>
     <%= link_to "sign in", new_user_session_path, class: "btn btn-default" %>
      <% end %>
    </div>
  <hr>
  <%= flash[:notice] || flash[:alert] %>
  <hr>
  <%= yield %>
</div>

</body>
</html>
